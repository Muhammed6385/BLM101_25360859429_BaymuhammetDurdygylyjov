------------------------------------------------------------
 Proje Adı   : Gezegenler Arası Fizik Deney Simülasyonu
    Bu program, Güneş Sistemi’ndeki 8 gezegen için
    yerçekimi ivmesine bağlı fizik deneylerini
    simüle eden menü tabanlı bir konsol uygulamasıdır.

    Kullanıcıdan alınan değerlere göre;
    - Serbest düşme
    - Yukarı atış
    - Ağırlık
    - Potansiyel enerji
    - Hidrostatik basınç
    - Arşimet kuvveti
    - Basit sarkaç
    - İp gerilmesi
    - Asansör deneyi

    hesaplamaları yapılır ve sonuçlar
    gezegenlere göre karşılaştırmalı olarak ekrana yazdırılır.

 Kullanılan Konular :
    - Fonksiyonlar
    - Diziler
    - Pointer (işaretçiler)
    - Döngüler
    - Menü tabanlı yapı
    - math.h kütüphanesi

 Amaç :
    Fizik formüllerinin C programlama dili ile
    uygulanmasını ve yerçekiminin etkisinin
    anlaşılmasını sağlamak.

===================================================
===================================================

#include <stdio.h>
#include <math.h>

#define GEZEGEN_SAYISI 8

const char *gezegenler[GEZEGEN_SAYISI] = {
    "Merkur", "Venus", "Dunya", "Mars",
    "Jupiter", "Saturn", "Uranus", "Neptun"
};

double mutlakDeger(double x) {
    if (x < 0)
        return -x;
    else
        return x;
}

void serbestDusme(double *g) {
    double t;
    printf("Zamani giriniz (s): ");
    scanf("%lf", &t);
    t = mutlakDeger(t);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Alinan yol = %.2f m\n", gezegenler[i], 0.5 * g[i] * t * t);
}

void yukariAtis(double *g) {
    double v0;
    printf("Ilk hiz degerini giriniz (m/s): ");
    scanf("%lf", &v0);
    v0 = mutlakDeger(v0);

    for (int i = 0; i < GEZEGEN_SAYISI; i++) {
        double hmax = (v0 * v0) / (2 * g[i]);
        printf("%s -> Maksimum yukseklik = %.2f m\n", gezegenler[i], hmax);
    }
}

void agirlikDeneyi(double *g) {
    double m;
    printf("Kutleyi giriniz (kg): ");
    scanf("%lf", &m);
    m = mutlakDeger(m);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Agirlik = %.2f N\n", gezegenler[i], m * g[i]);
}

void potansiyelEnerji(double *g) {
    double m, h;
    printf("Kutleyi giriniz (kg): ");
    scanf("%lf", &m);
    printf("Yuksekligi giriniz (m): ");
    scanf("%lf", &h);

    m = mutlakDeger(m);
    h = mutlakDeger(h);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Potansiyel Enerji = %.2f J\n", gezegenler[i], m * g[i] * h);
}

void hidrostatikBasinc(double *g) {
    double yogunluk, derinlik;
    printf("Sivi yogunlugunu giriniz (kg/m^3): ");
    scanf("%lf", &yogunluk);
    printf("Derinligi giriniz (m): ");
    scanf("%lf", &derinlik);

    yogunluk = mutlakDeger(yogunluk);
    derinlik = mutlakDeger(derinlik);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Basinc = %.2f Pa\n", gezegenler[i], yogunluk * g[i] * derinlik);
}

void arsimetKuvveti(double *g) {
    double yogunluk, hacim;
    printf("Sivi yogunlugunu giriniz (kg/m^3): ");
    scanf("%lf", &yogunluk);
    printf("Batan hacmi giriniz (m^3): ");
    scanf("%lf", &hacim);

    yogunluk = mutlakDeger(yogunluk);
    hacim = mutlakDeger(hacim);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Kaldirma Kuvveti = %.2f N\n", gezegenler[i], yogunluk * g[i] * hacim);
}

void basitSarkac(double *g) {
    double uzunluk;
    printf("Ip uzunlugunu giriniz (m): ");
    scanf("%lf", &uzunluk);
    uzunluk = mutlakDeger(uzunluk);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Periyot = %.2f s\n", gezegenler[i], 2 * M_PI * sqrt(uzunluk / g[i]));
}

void ipGerilmesi(double *g) {
    double m;
    printf("Kutleyi giriniz (kg): ");
    scanf("%lf", &m);
    m = mutlakDeger(m);

    for (int i = 0; i < GEZEGEN_SAYISI; i++)
        printf("%s -> Ip Gerilmesi = %.2f N\n", gezegenler[i], m * g[i]);
}

void asansorDeneyi(double *g) {
    double m, a;
    int secim;
    printf("Kutleyi giriniz (kg): ");
    scanf("%lf", &m);
    printf("Asansor ivmesini giriniz (m/s^2): ");
    scanf("%lf", &a);
    printf("1 - Yukari ivmeli | 2 - Asagi ivmeli: ");
    scanf("%d", &secim);

    m = mutlakDeger(m);
    a = mutlakDeger(a);

    for (int i = 0; i < GEZEGEN_SAYISI; i++) {
        double N = (secim == 1) ? m * (g[i] + a) : m * (g[i] - a);
        if (N < 0) N = 0;
        printf("%s -> Hissedilen Agirlik = %.2f N\n", gezegenler[i], N);
    }
}

void menu() {
    printf("\n***** Deney Menusu *****\n");
    printf("1 - Serbest Dusme Deneyi\n");
    printf("2 - Yukari Atis Deneyi\n");
    printf("3 - Agirlik Deneyi\n");
    printf("4 - Potansiyel Enerji Deneyi\n");
    printf("5 - Hidrostatik Basinc Deneyi\n");
    printf("6 - Arsimet Kuvveti Deneyi\n");
    printf("7 - Basit Sarkac Deneyi\n");
    printf("8 - Ip Gerilmesi Deneyi\n");
    printf("9 - Asansor Deneyi\n");
    printf("0 - Cikis\n");
    printf("Seciminizi giriniz: ");
}

void tamamlandiMesaji() {
    printf("\n--------------------------------------------\n");
    printf("Isleminiz tamamlandi. Yeni bir islem seciniz.\n");
    printf("--------------------------------------------\n\n");
}

int main() {
    double yercekimi[GEZEGEN_SAYISI] = {3.7, 8.87, 9.81, 3.71, 24.79, 10.44, 8.69, 11.15};
    char kullanici[50];
    int secim;

    printf("Hos geldiniz! Isminiz nedir?: ");
    scanf("%s", kullanici);

    do {
        menu();
        scanf("%d", &secim);

        switch (secim) {
            case 1: serbestDusme(yercekimi); tamamlandiMesaji(); break;
            case 2: yukariAtis(yercekimi); tamamlandiMesaji(); break;
            case 3: agirlikDeneyi(yercekimi); tamamlandiMesaji(); break;
            case 4: potansiyelEnerji(yercekimi); tamamlandiMesaji(); break;
            case 5: hidrostatikBasinc(yercekimi); tamamlandiMesaji(); break;
            case 6: arsimetKuvveti(yercekimi); tamamlandiMesaji(); break;
            case 7: basitSarkac(yercekimi); tamamlandiMesaji(); break;
            case 8: ipGerilmesi(yercekimi); tamamlandiMesaji(); break;
            case 9: asansorDeneyi(yercekimi); tamamlandiMesaji(); break;
            case 0: printf("Tesekkurler, programdan cikiliyor.\n"); break;
            default: printf("Hatali secim! Tekrar deneyiniz.\n\n");
        }

    } while (secim != 0);

    return 0;
}












